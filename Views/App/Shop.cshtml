@model IEnumerable<Product>
<h1>Shop</h1>
<p>Count: @Model.Count()</p>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3">
            <img src="~/img/@(p.Id).jpg" id="Shoethumbnail" />
            <h3>@p.Category - @p.Size</h3>
            <ul>
                <li>Price: $@p.Price</li>
                <li>Shoes: @p.ShoeTitle</li>
                <li>
                    Description: @p.Description
                </li>
                <li>
                    Colour Available: Black, Brown
                </li>
            </ul>
            <button class="btn btn-info">Buy</button>
        </div>
    }
</div>
